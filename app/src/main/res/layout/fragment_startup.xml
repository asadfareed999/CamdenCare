<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStartupBg">

    <ImageView
        android:id="@+id/img_startup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/str_camden_care_logo"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/bg_signup" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/dimen_startup_linearlayout_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimen_startup_bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_camdencare_logo"
            android:layout_width="@dimen/dimen_startup_logo_width"
            android:layout_height="@dimen/dimen_startup_logo_height"
            android:layout_gravity="center"
            android:contentDescription="@string/str_camden_care_logo"
            app:srcCompat="@drawable/img_camdencare_horiz" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/dimen_startup_button_w"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_startup_button_top"
            android:background="@drawable/bg_btn_gradient"
            android:text="@string/str_login"
            android:textColor="@color/colorButtonText" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivLogoUol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_startup_logo_top"
        android:tint="@color/colorStartupLogoTint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_splash" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextViewRobotoBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_startup_logo_text_top"
        android:text="@string/str_uol"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogoUol" />


</androidx.constraintlayout.widget.ConstraintLayout>

